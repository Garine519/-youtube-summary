{
  "manifest_version": 3,
  "name": "Youtube Video Summary",
  "version": "1.3.3",
  "description": "Summarizes youtube videos",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "options_ui": {
    "page": "index.html#/options",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
